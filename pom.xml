	<packaging>jar</packaging>

	<name>ToDoMVC_Singtel</name>
	<url>http://maven.apache.org</url>
	<developers>
		<developer>
			<name>Dhanushka</name>
			<email>dhanushkackr@gmail.com</email>
			<roles>
