					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.10.1</version>
					<configuration>
						<executable>${JAVA_HOME}\bin\javac</executable>
						<!--     <source>1.8</source><target>1.8</target> -->
